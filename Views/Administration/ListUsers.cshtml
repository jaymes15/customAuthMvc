@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Add New User</a>
    <br /><br />
    foreach (var user in Model)
    {
        <div class="card">
            <div class="card-header">
                User Id: @user.Id
            </div>
            <div class="card-body">
                User Name: @user.UserName
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                    <a class="btn btn-primary" asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id">
                        Edit User
                    </a>
                    <button type="submit" class="btn btn-danger" 
                            onclick="return confirm('Are you sure you want autofocus delete user:@user.UserName')">
                        Delete User
                    </button>
                </form>
            </div>
        </div>
        <br/>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No Users created yet
        </div>
        <div class="card-body">
            User the button below to create a user
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Add New User</a>
        </div>
    </div>
}